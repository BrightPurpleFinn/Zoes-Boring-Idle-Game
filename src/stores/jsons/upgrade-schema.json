{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "default": "New Upgrade"
      },
      "cost": {
        "type": "object",
        "properties": {
          "currencies": {
            "type": "array",
            "items": {
              "enum": ["gold"]
            }
          },
          "quantities": {
            "type": "array",
            "items":  {
              "type": "number"
            }
          }
        },
        "required": ["currencies", "quantities"]
      }
    },
    "required": ["name", "cost"]
  }
}
